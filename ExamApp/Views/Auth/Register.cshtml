@model UserRegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <form class="w-50 mx-auto shadow p-4 mt-5" asp-action="Register" method="post">

        <div class="form-group">
            <label asp-for="Username"></label>
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Username" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="RoleId">Rol</label>
            <span asp-validation-for="RoleId" class="text-danger"></span>
            <select class="form-control" asp-for="RoleId" asp-items="@ViewBag.RoleList">
                <option hidden value="-1">Seçiniz</option>
            </select>
        </div>


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <a asp-action="Register2" class="btn btn-warning btn-sm">Kayıt Ol</a>
        <button type="submit" class="btn btn-info btn-sm">Giriş</button>

    </form>


    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
